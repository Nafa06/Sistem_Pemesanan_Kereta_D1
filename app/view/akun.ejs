<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rincian Akun - TravelTrain</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800&family=Poppins:wght@300;400;500;600&display=swap"
        rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        heading: ['Montserrat', 'sans-serif'],
                    },
                    colors: {
                        primary: '#4F46E5', // Indigo
                        secondary: '#EC4899', // Pink
                        dark: '#1e1b4b',
                    }
                }
            }
        }
    </script>

    <style>
        /* Animasi Fade In */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fadeInUp 0.6s ease-out forwards;
        }

        /* Background Pattern */
        body {
            background-color: #F8FAFC;
            background-image: radial-gradient(#E0E7FF 1px, transparent 1px);
            background-size: 24px 24px;
        }

        /* Glass Effect Navbar */
        .glass-panel {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>
</head>

<body class="text-gray-700 flex flex-col min-h-screen">

    <nav class="fixed w-full z-50 top-0 glass-panel shadow-sm">
        <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="flex items-center gap-2 group transition hover:opacity-80">
                <div
                    class="w-8 h-8 bg-gradient-to-tr from-primary to-secondary rounded-lg flex items-center justify-center text-white shadow-lg group-hover:-rotate-12 transition">
                    <i class="fa-solid fa-arrow-left"></i>
                </div>
                <span class="font-heading font-bold text-lg text-gray-800">Kembali</span>
            </a>
            <span class="font-heading font-bold text-xl text-primary">Rincian Akun</span>
        </div>
    </nav>

    <div class="flex-grow max-w-3xl mx-auto w-full px-6 pt-28 pb-20">

        <div class="bg-white/60 backdrop-blur-md rounded-3xl border border-white/50 shadow-xl p-8 animate-fade-in">
            
            <!-- Header Section -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-primary to-secondary mb-4 shadow-lg">
                    <i class="fa-solid fa-user text-3xl text-white"></i>
                </div>
                <h1 class="font-heading text-3xl font-bold text-gray-800 mb-2">Rincian Akun</h1>
                <p class="text-gray-500">Kelola informasi pribadi Anda</p>
            </div>

            <!-- Form Section -->
            <form id="formAkun" class="space-y-6">
                
                <!-- Nama Lengkap -->
                <div class="group">
                    <label class="block text-sm font-bold text-gray-700 mb-2 ml-1">
                        <i class="fa-solid fa-user text-primary mr-2"></i>Nama Lengkap
                    </label>
                    <input type="text" id="nama" name="nama" required
                        class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:border-primary focus:bg-white outline-none transition-all duration-300 font-semibold text-gray-700"
                        placeholder="Masukkan nama lengkap">
                </div>

                <!-- Email -->
                <div class="group">
                    <label class="block text-sm font-bold text-gray-700 mb-2 ml-1">
                        <i class="fa-solid fa-envelope text-primary mr-2"></i>Email
                    </label>
                    <input type="email" id="email" name="email" required
                        class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:border-primary focus:bg-white outline-none transition-all duration-300 font-semibold text-gray-700"
                        placeholder="email@example.com">
                </div>

                <!-- No HP -->
                <div class="group">
                    <label class="block text-sm font-bold text-gray-700 mb-2 ml-1">
                        <i class="fa-solid fa-phone text-primary mr-2"></i>No HP
                    </label>
                    <input type="tel" id="kontak" name="kontak" required
                        class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:border-primary focus:bg-white outline-none transition-all duration-300 font-semibold text-gray-700"
                        placeholder="08xxxxxxxxxx">
                </div>

                <!-- Tipe ID -->
                <div class="group">
                    <label class="block text-sm font-bold text-gray-700 mb-2 ml-1">
                        <i class="fa-solid fa-id-card text-primary mr-2"></i>Tipe Identitas
                    </label>
                    <select id="tipe_id" name="tipe_id" required
                        class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:border-primary focus:bg-white outline-none transition-all duration-300 font-semibold text-gray-700 cursor-pointer">
                        <option value="KTP">KTP</option>
                        <option value="SIM">SIM</option>
                        <option value="PASPOR">PASPOR</option>
                    </select>
                </div>

                <!-- Nomor ID/NIK -->
                <div class="group">
                    <label class="block text-sm font-bold text-gray-700 mb-2 ml-1">
                        <i class="fa-solid fa-fingerprint text-primary mr-2"></i>Nomor Identitas (NIK/SIM/Paspor)
                    </label>
                    <input type="text" id="no_id" name="no_id" required
                        class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:border-primary focus:bg-white outline-none transition-all duration-300 font-semibold text-gray-700"
                        placeholder="Masukkan nomor identitas">
                    <p class="text-xs text-gray-500 mt-2 ml-1">
                        <i class="fa-solid fa-info-circle mr-1"></i>
                        NIK KTP harus 16 digit
                    </p>
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button type="submit"
                        class="w-full bg-gradient-to-r from-primary to-secondary text-white font-bold py-4 rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 transition transform hover:-translate-y-1 flex items-center justify-center gap-2">
                        <i class="fa-solid fa-save"></i>
                        Simpan Perubahan
                    </button>
                </div>

            </form>

        </div>

    </div>

    <footer class="bg-white border-t border-gray-200 py-10 mt-auto">
        <div
            class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center text-gray-500 text-sm">
            <div class="flex items-center gap-2 mb-4 md:mb-0">
                <span class="font-bold text-gray-800 text-lg">TravelTrain</span>
            </div>
            <div class="mt-4 md:mt-0">&copy; 2026 Made By D1</div>
        </div>
    </footer>

    <script>
        // Load user data when page loads
        document.addEventListener('DOMContentLoaded', function () {
            loadUserData();
        });

        // Function to load user data
        function loadUserData() {
            fetch('/api/user-profile')
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        const user = data.user;
                        document.getElementById('nama').value = user.nama_penumpang || '';
                        document.getElementById('email').value = user.email || '';
                        document.getElementById('kontak').value = user.kontak || '';
                        document.getElementById('tipe_id').value = user.tipe_id || 'KTP';
                        document.getElementById('no_id').value = user.no_id || '';
                    } else {
                        Swal.fire('Error', 'Gagal memuat data akun', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error', 'Terjadi kesalahan saat memuat data', 'error');
                });
        }

        // Handle form submission
        document.getElementById('formAkun').addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = {
                nama: document.getElementById('nama').value.trim(),
                email: document.getElementById('email').value.trim(),
                kontak: document.getElementById('kontak').value.trim(),
                tipe_id: document.getElementById('tipe_id').value,
                no_id: document.getElementById('no_id').value.trim()
            };

            // Validasi
            if (!formData.nama || !formData.email || !formData.kontak || !formData.no_id) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Data Tidak Lengkap',
                    text: 'Harap isi semua field yang diperlukan',
                    confirmButtonColor: '#4F46E5'
                });
                return;
            }

            // Validasi email format
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(formData.email)) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Email Tidak Valid',
                    text: 'Harap masukkan alamat email yang valid',
                    confirmButtonColor: '#4F46E5'
                });
                return;
            }

            // Validasi no HP (harus dimulai dengan 08 dan minimal 10 digit)
            if (!formData.kontak.startsWith('08') || formData.kontak.length < 10) {
                Swal.fire({
                    icon: 'warning',
                    title: 'No HP Tidak Valid',
                    text: 'No HP harus dimulai dengan 08 dan minimal 10 digit',
                    confirmButtonColor: '#4F46E5'
                });
                return;
            }

            // Validasi NIK jika tipe_id adalah KTP
            if (formData.tipe_id === 'KTP' && formData.no_id.length !== 16) {
                Swal.fire({
                    icon: 'warning',
                    title: 'NIK Tidak Valid',
                    text: 'NIK KTP harus 16 digit',
                    confirmButtonColor: '#4F46E5'
                });
                return;
            }

            // Show loading
            Swal.fire({
                title: 'Menyimpan...',
                text: 'Mohon tunggu sebentar',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Send data to server
            fetch('/api/update-profile', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        Swal.fire({
                            icon: 'success',
                            title: 'Berhasil!',
                            text: 'Data akun berhasil diperbarui',
                            confirmButtonColor: '#10B981'
                        }).then(() => {
                            // Reload data
                            loadUserData();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Gagal',
                            text: data.message || 'Terjadi kesalahan saat menyimpan data',
                            confirmButtonColor: '#EF4444'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Terjadi kesalahan koneksi server',
                        confirmButtonColor: '#EF4444'
                    });
                });
        });
    </script>

</body>

</html>
