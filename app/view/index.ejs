        function toggleAccountDropdown(event) {
            event.stopPropagation();
            const dropdown = document.getElementById('dropdownMenu');
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function (event) {
            const dropdown = document.getElementById('dropdownMenu');
            const accountDropdown = document.getElementById('accountDropdown');

            if (dropdown && accountDropdown && !accountDropdown.contains(event.target)) {
                dropdown.classList.add('hidden');
            }
        });
    </script>

    <script>
        // --- 6. AUTO-REFRESH TICKET AVAILABILITY ---
        let autoRefreshInterval = null;

        // Start auto-refresh when search results are displayed
        function startAutoRefresh() {
            // Check if we have search results
            const hasResults = document.querySelector('[data-tiket-id]') !== null;
            if (!hasResults) return;

            console.log('ðŸ”„ Auto-refresh started - checking every 10 seconds');

            // Refresh every 10 seconds
            autoRefreshInterval = setInterval(() => {
                refreshTicketData();
            }, 10000);
        }

        function refreshTicketData() {
            // Get current search parameters from URL
            const urlParams = new URLSearchParams(window.location.search);
            const asal = urlParams.get('asal');
            const tujuan = urlParams.get('tujuan');
            const tanggal = urlParams.get('tanggal');

            if (!asal || !tujuan || !tanggal) return;

            console.log('ðŸ”„ Refreshing ticket data...');

            // Fetch updated data
            fetch(`/ search ? asal = ${asal} & tujuan=${tujuan} & tanggal=${tanggal}`)
                .then(response => response.text())
                .then(html => {
                    // Parse the HTML to extract updated ticket data
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');

                    // Get all ticket cards from new data
                    const newTickets = doc.querySelectorAll('[data-tiket-id]');

                    // Update each ticket's seat availability
                    newTickets.forEach(newTicket => {
                        const ticketId = newTicket.getAttribute('data-tiket-id');
                        const oldTicket = document.querySelector(`[data - tiket - id= "${ticketId}"]`);

                        if (oldTicket) {
                            const newSeats = newTicket.querySelector('[data-kursi]');
                            const oldSeats = oldTicket.querySelector('[data-kursi]');

                            if (newSeats && oldSeats) {
                                const newCount = parseInt(newSeats.textContent);
                                const oldCount = parseInt(oldSeats.textContent);

                                // Update if changed
                                if (newCount !== oldCount) {
                                    oldSeats.textContent = newCount;
                                    console.log(`âœ… Updated ticket ${ticketId}: ${oldCount} â†’ ${newCount} seats`);

                                    // Flash animation to show change
                                    const kursiContainer = oldSeats.closest('.bg-green-50');
                                    if (kursiContainer) {
                                        kursiContainer.classList.add('animate-pulse');
                                        setTimeout(() => {
                                            kursiContainer.classList.remove('animate-pulse');
                                        }, 2000);
                                    }

                                    // Check if sold out
                                    if (newCount <= 0) {
                                        oldTicket.style.opacity = '0.5';
                                        oldTicket.style.filter = 'grayscale(100%)';
                                        const pilihBtn = oldTicket.querySelector('button');
                                        if (pilihBtn) {
                                            pilihBtn.disabled = true;
                                            pilihBtn.textContent = 'Habis';
                                            pilihBtn.classList.remove('from-primary', 'to-secondary');
                                            pilihBtn.classList.add('bg-gray-400', 'cursor-not-allowed');
                                        }
                                    }
                                }
                            }
                        }
                    });
                })
                .catch(error => {
                    console.error('âŒ Auto-refresh error:', error);
                });
        }

        // Stop auto-refresh when leaving page
        window.addEventListener('beforeunload', () => {
            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
                console.log('ðŸ›‘ Auto-refresh stopped');
            }
        });

        // Start auto-refresh when page loads (if has results)
        document.addEventListener('DOMContentLoaded', () => {
            startAutoRefresh();
        });
    </script>

