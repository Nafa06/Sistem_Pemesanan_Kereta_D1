    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // --- 1. CONFIG FLATPICKR (DATE PICKER) ---
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr("#tanggal", {
                locale: 'id',
                minDate: 'today',
                dateFormat: 'Y-m-d',
                altInput: true,
                altFormat: 'j F Y',
                disableMobile: "true", // Memaksa agar calendar native HP muncul jika di HP, lebih stabil
                defaultDate: "<%= (typeof tanggal !== 'undefined') ? tanggal : '' %>"
            });
        });

        // --- 2. VALIDASI PENCARIAN ---
        function validasiPencarian(event) {
            const asal = document.getElementById('asal').value;
            const tujuan = document.getElementById('tujuan').value;
            const tanggal = document.getElementById('tanggal').value;

            if (!asal || !tujuan || !tanggal) {
                event.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Data Belum Lengkap',
                    text: 'Harap isi stasiun asal, tujuan, dan tanggal keberangkatan.',
                    confirmButtonColor: '#4F46E5'
                });
                return false;
            }

            if (asal === tujuan) {
                event.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Rute Tidak Valid',
                    text: 'Stasiun asal dan tujuan tidak boleh sama.',
                    confirmButtonColor: '#EC4899'
                });
                return false;
            }
            return true;
        }

        // --- 3. FUNGSI PESAN TIKET ---
        function pesanTiket(tiketElement) {
            const idTiket = tiketElement.getAttribute('data-tiket-id');
            const namaKereta = tiketElement.querySelector('[data-nama-kereta]').textContent;
            const hargaFormat = tiketElement.querySelector('[data-harga]').textContent;
            const hargaValue = tiketElement.querySelector('[data-harga-value]').getAttribute('data-harga-value');

            // Tampilkan Konfirmasi SweetAlert tanpa Pilihan Metode Pembayaran
            Swal.fire({
                title: 'Konfirmasi Pesanan',
                html: `
                    <div class="text-left bg-gray-50 p-4 rounded-lg text-sm mb-4">
                        <p><strong>Kereta:</strong> ${namaKereta}</p>
                        <p><strong>Total Harga:</strong> <span class="text-primary font-bold text-lg">${hargaFormat}</span></p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4F46E5',
                cancelButtonColor: '#ef4444',
                confirmButtonText: 'Pesan Sekarang',
                cancelButtonText: 'Batal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Langsung proses dengan metode default (bank)
                    const metodeBayar = 'bank';
                    lanjutkePembayaran(idTiket, metodeBayar);
                }
            });
        }

        // --- 4. PROSES PEMBAYARAN KE SERVER ---
        function lanjutkePembayaran(idTiket, metodeBayar) {

            // Tampilkan Loading
            Swal.fire({
                title: 'Memproses Pemesanan...',
                text: 'Mohon tunggu sebentar',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Kirim Data ke Backend
            fetch('/order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    idTiket: parseInt(idTiket),
                    metodeBayar: metodeBayar
                })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        Swal.fire({
                            title: 'Berhasil Dipesan!',
                            html: `<p>Kode Booking Anda: <br><strong class="text-2xl text-primary font-mono mt-2 block">${data.kode}</strong>
    </p>`,
                            icon: 'success',
                            confirmButtonText: 'Lihat Tiketku',
                            confirmButtonColor: '#10B981'
                        }).then(() => {
                            window.location.href = '/cek-pesanan';
                        });
                    } else {
                        // Jika error (misal belum login)
                        if (data.message.includes('login')) {
                            Swal.fire({
                                title: 'Login Diperlukan',
                                text: data.message,
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonText: 'Login Sekarang',
                                cancelButtonText: 'Batal'
                            }).then((res) => {
                                if (res.isConfirmed) window.location.href = '/login';
                            });
                        } else {
                            Swal.fire('Gagal', data.message, 'error');
                        }
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error', 'Terjadi kesalahan koneksi server', 'error');
                });
        }
    </script>

    <script>
