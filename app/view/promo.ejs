<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Promo - TravelTrain</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        heading: ['Montserrat', 'sans-serif'],
                    },
                    colors: {
                        primary: '#4F46E5',
                        secondary: '#EC4899',
                        dark: '#1e1b4b',
                    }
                }
            }
        }
    </script>

    <style>
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in { animation: fadeInUp 0.6s ease-out forwards; }

        @keyframes slideInLeft {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }
        .animate-slide-in-left { animation: slideInLeft 0.6s ease-out forwards; }

        body {
            background-color: #F8FAFC;
            background-image: radial-gradient(#E0E7FF 1px, transparent 1px);
            background-size: 24px 24px;
        }

        .glass-panel {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .promo-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .promo-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(79, 70, 229, 0.2);
        }

        .badge-promo {
            background: linear-gradient(135deg, #4F46E5, #EC4899);
        }

        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #c7c7c7; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #a0a0a0; }
    </style>
</head>
<body class="text-gray-700 flex flex-col min-h-screen">

    <!-- Navbar -->
    <nav class="fixed w-full z-50 top-0 glass-panel shadow-sm">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="flex items-center gap-2 group transition hover:opacity-80">
                <div class="w-10 h-10 bg-gradient-to-tr from-primary to-secondary rounded-lg flex items-center justify-center text-white shadow-lg group-hover:rotate-12 transition">
                    <i class="fa-solid fa-train text-lg"></i>
                </div>
                <span class="font-heading font-bold text-2xl bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary hidden sm:inline">
                    TravelTrain
                </span>
            </a>

            <div class="flex gap-4">
                <a href="/cek-pesanan" class="text-gray-600 hover:text-primary transition font-medium hidden md:block">
                    Cek Pesanan
                </a>
                <a href="/" class="text-gray-600 hover:text-primary transition font-medium">
                    <i class="fa-solid fa-arrow-left mr-2"></i>Kembali
                </a>
            </div>
        </div>
    </nav>

    <!-- Header Section -->
    <div class="relative pt-32 pb-16 overflow-hidden">
        <div class="absolute inset-0 z-0">
            <div class="absolute inset-0 bg-gradient-to-r from-primary/80 via-secondary/70 to-primary/80"></div>
        </div>

        <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
            <h1 class="font-heading text-5xl md:text-6xl font-extrabold text-white leading-tight mb-4 animate-fade-in">
                ðŸŽ‰ Promosi Spesial
            </h1>
            <p class="text-xl text-white/90 max-w-2xl mx-auto animate-fade-in" style="animation-delay: 0.1s;">
                Dapatkan penawaran eksklusif dan hemat hingga 33% untuk perjalanan Anda
            </p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow max-w-7xl mx-auto w-full px-6 pb-16">

        <!-- Filter / Search (Optional) -->
        <div class="mb-12 -mt-8 relative z-20">
            <div class="glass-panel rounded-2xl p-6 flex gap-4 shadow-xl flex-col md:flex-row">
                <input type="text" id="searchPromo" placeholder="Cari promo..." 
                       class="flex-1 px-4 py-2 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition bg-white">
                <button class="bg-gradient-to-r from-primary to-secondary text-white font-bold py-2 px-6 rounded-xl hover:shadow-lg transition">
                    <i class="fa-solid fa-search mr-2"></i>Cari
                </button>
            </div>
        </div>

        <!-- Promo Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

            <% promoData.forEach((promo, index) => { %>

                <div class="promo-card bg-white rounded-3xl shadow-lg overflow-hidden border border-gray-100 animate-fade-in"
                     style="animation-delay: <%= index * 0.1 %>s;">
                    
                    <!-- Header with Badge -->
                    <div class="relative h-32 badge-promo overflow-hidden flex items-center justify-center">
                        <div class="text-6xl opacity-30"><%= promo.icon %></div>
                        <div class="absolute top-4 right-4 bg-white/20 backdrop-blur-md border border-white/30 text-white text-xs font-bold px-3 py-1 rounded-full">
                            Diskon <%= promo.potongan %>
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-6">
                        <h3 class="font-heading font-bold text-lg text-gray-800 mb-2">
                            <%= promo.title %>
                        </h3>
                        <p class="text-gray-600 text-sm mb-4">
                            <%= promo.deskripsi %>
                        </p>

                        <!-- Promo Code -->
                        <div class="bg-indigo-50 border-2 border-indigo-200 rounded-xl p-4 mb-4">
                            <p class="text-xs text-gray-600 font-semibold mb-1">Kode Promo:</p>
                            <div class="flex items-center justify-between">
                                <code class="text-lg font-bold text-primary"><%= promo.kodePromo %></code>
                                <button onclick="copyToClipboard('<%= promo.kodePromo %>')" 
                                        class="text-primary hover:text-secondary transition font-semibold">
                                    <i class="fa-solid fa-copy"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Valid Until -->
                        <p class="text-xs text-gray-500 mb-4">
                            <i class="fa-solid fa-calendar-alt mr-1"></i>
                            Berlaku hingga <%= new Date(promo.validHingga).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                        </p>

                        <!-- CTA Button -->
                        <a href="/?promo=<%= promo.kodePromo %>" 
                           class="w-full block text-center bg-gradient-to-r from-primary to-secondary text-white font-bold py-3 rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 transition transform hover:-translate-y-1">
                            Gunakan Promo
                        </a>
                    </div>
                </div>

            <% }); %>

        </div>

        <!-- CTA Section -->
        <div class="mt-16 bg-gradient-to-r from-primary to-secondary rounded-3xl p-10 md:p-16 text-white text-center shadow-xl animate-fade-in">
            <h2 class="font-heading text-3xl md:text-4xl font-bold mb-4">
                Jangan Lewatkan Promosi Menarik Lainnya!
            </h2>
            <p class="text-lg text-white/90 mb-8 max-w-xl mx-auto">
                Subscribe ke newsletter kami untuk mendapatkan notifikasi promo eksklusif setiap hari
            </p>
            <div class="flex flex-col md:flex-row gap-3 max-w-md mx-auto">
                <input type="email" placeholder="Masukkan email Anda" 
                       class="flex-1 px-4 py-3 rounded-xl text-gray-800 focus:outline-none">
                <button class="bg-white text-primary font-bold py-3 px-8 rounded-xl hover:shadow-lg transition transform hover:-translate-y-1">
                    Subscribe
                </button>
            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 py-8 mt-16">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <p>Â© 2026 TravelTrain. Semua hak dilindungi. <span class="text-white">Pesan Tiket Kereta Online Terpercaya</span></p>
        </div>
    </footer>

    <!-- Toast Notification -->
    <div id="toast" class="hidden fixed bottom-6 right-6 bg-green-500 text-white px-6 py-3 rounded-xl shadow-lg z-50 animate-fade-in">
        <i class="fa-solid fa-check-circle mr-2"></i>
        <span id="toastMessage">Promo disalin!</span>
    </div>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showToast('Kode promo <strong>' + text + '</strong> berhasil disalin!');
            });
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            document.getElementById('toastMessage').innerHTML = message;
            toast.classList.remove('hidden');
            
            setTimeout(() => {
                toast.classList.add('hidden');
            }, 3000);
        }

        // Search functionality
        document.getElementById('searchPromo').addEventListener('input', (e) => {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.promo-card');
            
            cards.forEach(card => {
                const text = card.textContent.toLowerCase();
                if (text.includes(searchText)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>

</body>
</html>
